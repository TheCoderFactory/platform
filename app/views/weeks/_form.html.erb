<%= simple_form_for(@week) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number, :input_html => { :class => 'form-control' } %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :title, :input_html => { :class => 'form-control' } %>
    <%= f.input :intro, :input_html => { :class => 'form-control redactor', rows: 10 } %>
    <%= f.input :active, :input_html => { :class => 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
