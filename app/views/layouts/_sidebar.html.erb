<div class="panel panel-info">
  <div class="panel-heading">Menu</div>
  <div class="panel-body">
    <ul class="nav nav-pills nav-stacked">
      <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to root_path do %><i class="icon-home"></i> Home<% end %></li>
      <li class="<%= 'active' if current_page?(user_profiles_path) %>"><%= link_to user_profiles_path do %><i class="icon-user"></i> Students<% end %></li>
      <li class="<%= 'active' if current_page?(calendar_path) %>"><%= link_to calendar_path do %><i class="icon-calendar"></i> Calendar<% end %></li>
      <li class="nav-divider"></li>
      <% if @weeks.count > 0 %>
        <% @weeks.each do |week| %>
          <li class="<%= 'active' if current_page?(week_path(week)) %>">
            <%= link_to "Week " + week.number.to_s, week_path(week) %>
              <ul class="nav sub-nav">
                <li><%= link_to "Class", inclass_path(week.inclasses.first) %></li>
                <li><%= link_to "Resources", links_path %></li>
              </ul>
          </li>

        <% end %>
      <% end %>
      <li class="nav-divider"></li>
      <li class="<%= 'active' if current_page?(projects_path) %>"><%= link_to "Projects", projects_path %></li>
      <li class="<%= 'active' if current_page?(links_path) %>"><%= link_to "Resources", links_path %></li>
    </ul>
  </div>
</div>