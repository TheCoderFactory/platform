<%= simple_form_for(@inclass) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :week, input_html: { class: 'form-control' } %>
    <%= f.input :day, input_html: { class: 'form-control' } %>
    <%= f.input :title, input_html: { class: 'form-control' } %>
    <%= f.input :intro, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
