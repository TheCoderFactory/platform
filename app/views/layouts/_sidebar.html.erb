<div class="panel panel-info">
  <div class="panel-heading">Menu</div>
  <div class="panel-body">
    <ul class="nav nav-pills nav-stacked">
      <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
      <li class="<%= 'active' if current_page?(user_profiles_path) %>"><%= link_to "Students", user_profiles_path %></li>
      <li class="<%= 'active' if current_page?(calendar_path) %>"><%= link_to "Calendar", calendar_path %></li>
      <li class="nav-divider"></li>
      <% if @weeks.count > 0 %>
        <% @weeks.each do |week| %>
          <li class="<%= 'active' if current_page?(week_path(week)) %>">
            <%= link_to "Week " + week.number.to_s, week_path(week) %>
            <% if current_page?(:controller => 'weeks') %>
              <ul class="nav sub-nav">
                <li><%= link_to "Class", week_inclass_path(week, week.inclasses.first) %></li>
                <li><%= link_to "Resources", links_path %></li>
              </ul>
            <% end %>
          </li>

        <% end %>
      <% end %>
      <li class="nav-divider"></li>
      <li class="<%= 'active' if current_page?(projects_path) %>"><%= link_to "Projects", projects_path %></li>
      <li class="<%= 'active' if current_page?(links_path) %>"><%= link_to "Resources", links_path %></li>
    </ul>
  </div>
</div>