<% if user_signed_in? %>
<div class="panel panel-info">
  <div class="panel-heading"><i class="icon-th-list"></i> Menu</div>
  <div class="panel-body">
    <ul class="nav nav-pills nav-stacked">
      <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to root_path do %><i class="icon-home"></i> Home<% end %></li>
      <li class="<%= 'active' if current_page?(user_profiles_path) %>"><%= link_to user_profiles_path do %><i class="icon-group"></i> Students<% end %></li>
      <li class="<%= 'active' if current_page?(calendar_path) %>"><%= link_to calendar_path do %><i class="icon-calendar"></i> Calendar<% end %></li>
      <li class="nav-divider"></li>
      <% if @active_weeks.count > 0 %>
        <% @active_weeks.each do |week| %>

          <li class="<%= 'active' if current_page?(week_path(week)) %> <%= 'finished' if week.finished? %>">
            <%= link_to week_path(week) do %>
              <% if week.current_week? %> <i class="icon-asterisk"></i> <% end %> 
              <% if week.finished? %> <i class="icon-check-sign"></i> <% end %>
              <% if week.future_week? %> <i class="icon-check-empty"></i> <% end %> 
              Week <%= week.number.to_s %> 
            <% end %>
              <!-- <ul class="nav sub-nav">
                <li><%= link_to "Class", inclass_path(week.inclasses.first) %></li>
                <li><%= link_to "Resources", links_path %></li>
              </ul> -->
          </li>

        <% end %>
      <% end %>
      <li class="nav-divider"></li>
      <li class="<%= 'active' if current_page?(projects_path) %>"><%= link_to projects_path do %><i class="icon-list-alt"></i> Projects<% end %></li>
      <li class="<%= 'active' if current_page?(links_path) %>"><%= link_to links_path do %><i class="icon-link"></i> Resources<% end %></li></li>
    </ul>
  </div>
</div>




<% end %>