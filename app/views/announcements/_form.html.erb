<%= simple_form_for(@announcement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => { :class => 'form-control' }, :input_html => { :class => 'form-control' } %>
    <%= f.input :body, :input_html => { :class => 'form-control', rows: 10 } %>
    <%= f.input :icon, :input_html => { :class => 'form-control' } %>
    <%= f.input :link, :input_html => { :class => 'form-control' } %>
    <%= f.input :publish %>
    <%= f.input :alert_level, :input_html => { :class => 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
