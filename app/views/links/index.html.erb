<div class="row">
  <div class="col-md-12">

    <h2><i class="icon-link"></i> Resources</h2>
    <div class="box-body">
    <table class="table">

      <thead>
        <tr>
          <th>Link</th>
          <th>Description</th>
          <% if current_user.has_role? :admin %>
            <th></th>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @links.each do |link| %>
          <tr>
            <td><i class="icon-globe"></i> <%= link_to link.title, link.url %></td>
            <td><%= link.description %></td>
            <% if current_user.has_role? :admin %>
              <td><%= link_to 'Edit', edit_link_path(link) %></td>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
<%= link_to 'New Resource', new_link_path %>
  </div>
  


