<%= simple_form_for(@section) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :inclass, input_html: { class: 'form-control' } %>
    <%= f.input :priority, input_html: { class: 'form-control' } %>
    <%= f.input :title, input_html: { class: 'form-control' } %>
    <%= f.input :content, :input_html => { :class => 'redactor', rows: 20 } %>
    <%= f.input :gist, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
